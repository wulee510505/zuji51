<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_header_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp"
        android:scaleType="centerCrop"
        android:background="@mipmap/bg_circle_header" />


    <com.wulee.administrator.zuji.widget.RCRelativeLayout
        android:id="@+id/avatarBg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="160dp"
        app:stroke_color="#cdcdcd"
        app:rc_stroke_width="1dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/userAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_margin="2dp" />
    </com.wulee.administrator.zuji.widget.RCRelativeLayout>

    <TextView
        android:id="@+id/userNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="165dp"
        android:layout_toLeftOf="@+id/avatarBg"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/avatarBg"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:textColor="#b3b3b3"
        android:textSize="12sp" />

</RelativeLayout>
