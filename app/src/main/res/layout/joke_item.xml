<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="45dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="45dp"
    android:clickable="true"
    app:cardCornerRadius="3dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/ll_opt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_copy"
                android:drawablePadding="8dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="复制"
                android:textSize="@dimen/com_tv_size_mid_lit" />


            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/icon_share_light"
                android:drawablePadding="8dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="分享"
                android:textSize="@dimen/com_tv_size_mid_lit" />

        </RelativeLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_opt"
            android:overScrollMode="never">

            <TextView
                android:id="@+id/tv_joke"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_joke_text"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.2"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/ctv_black_2"
                android:textSize="18sp" />
        </ScrollView>


    </RelativeLayout>


</android.support.v7.widget.CardView>